@model IEnumerable<BookModel>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <a class="btn btn-primary" asp-area="" asp-controller="Book" asp-action="Create">Crear Libro</a>
        </div>
    </div>
    @if(Model.Any())
    {
        <table class="table table-striped table-responsive">
            <thead>
            <tr>
                <th>ISBN</th>
                <th>Titulo</th>
                <th>Sipnosis</th>
                <th>No. de Páginas</th>
                <th>Editorial</th>
                <th>Autores</th>
            </tr>
            </thead>
            <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Isbn</td>
                    <td>@item.Title</td>
                    <td>@item.Sypnosis</td>
                    <td>@item.NumberPages</td>
                    <td>@item.EditorialName</td>
                    <td>@string.Join(',', item.Authors.Select(s => $" {s.Name} {s.LastName} "))</td>
                </tr>
            }

            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            No se encontraron libros
        </div>
    }

</div>
