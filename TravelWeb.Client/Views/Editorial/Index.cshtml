@model IEnumerable<EditorialModel>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <a class="btn btn-primary" asp-area="" asp-controller="Editorial" asp-action="Create">Crear Editorial</a>
        </div>
    </div>
    @if(Model.Any())
    {
        <table class="table table-striped table-responsive">
            <thead>
            <tr> 
                <th>Id</th>
                <th>Name</th>
                <th>Campus</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td> 
                    <td>@item.Campus</td> 
                </tr>
            } 
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            No hay editorial
        </div>
    }

</div>
